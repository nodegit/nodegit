{
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "after": true,
    "afterEach": true,
    "before": true,
    "beforeEach": true,
    "define": true,
    "describe": true,
    "global": true,
    "it": true
  },
  "rules": {
    "no-cond-assign": [
      "error",
      "except-parens"
    ],
    "curly": "error",
    "no-eq-null": "error",
    "no-eval": "error",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreComments": true
      }
    ],
    "no-proto": "error",
    "quotes": [
      "error",
      "double"
    ],
    "no-undef": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-invalid-this": "error"
  }
}
